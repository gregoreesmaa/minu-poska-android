<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Base.AppTheme"></style>

    <style name="Base.AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/primary_text</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
        <item name="android:divider">@color/divider</item>
        <item name="android:windowAnimationStyle">@null</item>
        <item name="photoItemForeground">?android:selectableItemBackground</item>
    </style>

    <style name="ToolbarNormalTheme" parent="BarNormalTheme">
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="actionMenuTextColor">@color/primary_text_light</item>
        <item name="android:actionMenuTextColor">@color/primary_text_light</item>
    </style>

    <style name="BarNormalTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/primary_text_light</item>
        <item name="android:textColorSecondary">@color/secondary_text</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="color">@color/primary_text_light</item>
    </style>

    <style name="DrawerHeaderElement" parent="AppTheme">
        <item name="color">@color/primary_text_light</item>
        <item name="android:shadowColor">#000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">0</item>
        <item name="android:shadowRadius">5</item>
    </style>

</resources>
